{
  "phases": {
    "package": {
      "actions": [
        {
          "action_id": "helm-package"
        },
        {
          "action_id": "helm-lint"
        }
      ],
      "context": {
        "resources": {
          "path": "/bitnami/airflow",
          "url": "{SHA_ARCHIVE}"
        }
      }
    },
    "verify": {
      "actions": [
        {
          "action_id": "trivy",
          "params": {
            "threshold": "CRITICAL",
            "vuln_type": [
              "OS"
            ]
          }
        },
        {
          "action_id": "health-check",
          "params": {
            "app_protocol": "HTTP",
            "endpoint": "lb-airflow-http"
          }
        },
        {
          "action_id": "goss",
          "params": {
            "remote": {
              "workload": "deploy-airflow-web"
            },
            "resources": {
              "path": "/.vib/airflow/goss"
            }
          }
        },
        {
          "action_id": "cypress",
          "params": {
            "app_protocol": "HTTP",
            "endpoint": "lb-airflow-http",
            "env": {
              "password": "ComplicatedPassword123!4",
              "username": "user"
            },
            "resources": {
              "path": "/.vib/airflow/cypress"
            }
          }
        }
      ],
      "context": {
        "resources": {
          "path": "/bitnami/airflow",
          "url": "{SHA_ARCHIVE}"
        },
        "runtime_parameters": "ImF1dGgiOgogICJwYXNzd29yZCI6ICJDb21wbGljYXRlZFBhc3N3b3JkMTIzITQiCiJsb2FkRXhhbXBsZXMiOiB0cnVlCiJzZXJ2aWNlIjoKICAicG9ydHMiOgogICAgImh0dHAiOiA4MAogICJ0eXBlIjogIkxvYWRCYWxhbmNlciI=",
        "target_platform": {
          "size": {
            "name": "M4"
          },
          "target_platform_id": "{VIB_ENV_TARGET_PLATFORM}"
        }
      }
    }
  }
}
