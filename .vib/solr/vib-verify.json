{
  "phases": {
    "package": {
      "actions": [
        {
          "action_id": "helm-package"
        },
        {
          "action_id": "helm-lint"
        }
      ],
      "context": {
        "resources": {
          "path": "/bitnami/solr",
          "url": "{SHA_ARCHIVE}"
        }
      }
    },
    "verify": {
      "actions": [
        {
          "action_id": "trivy",
          "params": {
            "threshold": "CRITICAL",
            "vuln_type": [
              "OS"
            ]
          }
        },
        {
          "action_id": "health-check",
          "params": {
            "app_protocol": "HTTP",
            "endpoint": "lb-solr-tcp-client"
          }
        },
        {
          "action_id": "goss",
          "params": {
            "remote": {
              "workload": "sts-solr"
            },
            "resources": {
              "path": "/.vib/solr/goss"
            }
          }
        },
        {
          "action_id": "cypress",
          "params": {
            "app_protocol": "HTTP",
            "endpoint": "lb-solr-tcp-client",
            "env": {
              "password": "ComplicatedPassword123!4",
              "username": "user"
            },
            "resources": {
              "path": "/.vib/solr/cypress"
            }
          }
        }
      ],
      "context": {
        "resources": {
          "path": "/bitnami/solr",
          "url": "{SHA_ARCHIVE}"
        },
        "runtime_parameters": "ImF1dGgiOgogICJhZG1pblBhc3N3b3JkIjogIkNvbXBsaWNhdGVkUGFzc3dvcmQxMjMhNCIKICAiYWRtaW5Vc2VybmFtZSI6ICJ1c2VyIgoic2VydmljZSI6CiAgInBvcnRzIjoKICAgICJodHRwIjogODAKICAidHlwZSI6ICJMb2FkQmFsYW5jZXIi",
        "target_platform": {
          "size": {
            "name": "S4"
          },
          "target_platform_id": "{VIB_ENV_TARGET_PLATFORM}"
        }
      }
    }
  }
}
