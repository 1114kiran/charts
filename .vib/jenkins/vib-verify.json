{
  "phases": {
    "package": {
      "actions": [
        {
          "action_id": "helm-package"
        },
        {
          "action_id": "helm-lint"
        }
      ],
      "context": {
        "resources": {
          "path": "/bitnami/jenkins",
          "url": "{SHA_ARCHIVE}"
        }
      }
    },
    "verify": {
      "actions": [
        {
          "action_id": "trivy",
          "params": {
            "threshold": "CRITICAL",
            "vuln_type": [
              "OS"
            ]
          }
        },
        {
          "action_id": "health-check",
          "params": {
            "app_protocol": "HTTP",
            "endpoint": "lb-jenkins-http"
          }
        },
        {
          "action_id": "goss",
          "params": {
            "remote": {
              "workload": "deploy-jenkins"
            },
            "resources": {
              "path": "/.vib/jenkins/goss"
            }
          }
        },
        {
          "action_id": "cypress",
          "params": {
            "app_protocol": "HTTP",
            "endpoint": "lb-jenkins-http",
            "env": {
              "password": "ComplicatedPassword123!4",
              "username": "user"
            },
            "resources": {
              "path": "/.vib/jenkins/cypress"
            }
          }
        }
      ],
      "context": {
        "resources": {
          "path": "/bitnami/jenkins",
          "url": "{SHA_ARCHIVE}"
        },
        "runtime_parameters": "amVua2luc1VzZXI6ICJ1c2VyIgpqZW5raW5zUGFzc3dvcmQ6ICJDb21wbGljYXRlZFBhc3N3b3JkMTIzITQiCnNlcnZpY2U6CiAgdHlwZTogTG9hZEJhbGFuY2VyCiAgcG9ydHM6CiAgICBodHRwOiA4MAo=",
        "target_platform": {
          "size": {
            "name": "S4"
          },
          "target_platform_id": "{VIB_ENV_TARGET_PLATFORM}"
        }
      }
    }
  }
}
