{
  "phases": {
    "package": {
      "actions": [
        {
          "action_id": "helm-package"
        },
        {
          "action_id": "helm-lint"
        }
      ],
      "context": {
        "resources": {
          "path": "/bitnami/redis",
          "url": "{SHA_ARCHIVE}"
        }
      }
    },
    "verify": {
      "actions": [
        {
          "action_id": "trivy",
          "params": {
            "threshold": "CRITICAL",
            "vuln_type": [
              "OS"
            ]
          }
        },
        {
          "action_id": "health-check",
          "params": {
            "endpoint": "lb-redis-replicas-tcp-redis"
          }
        },
        {
          "action_id": "resilience-tests",
          "params": {
            "test_cases": [
              "testKubernetesPodDelete",
              "testPodScaleUp",
              "testPodScaleDown"
            ]
          }
        },
        {
          "action_id": "goss",
          "params": {
            "remote": {
              "workload": "sts-redis-master"
            },
            "resources": {
              "path": "/.vib/redis/replicas/goss/goss-master"
            }
          }
        },
        {
          "action_id": "goss",
          "params": {
            "remote": {
              "workload": "sts-redis-replicas"
            },
            "resources": {
              "path": "/.vib/redis/replicas/goss/goss-replica"
            }
          }
        }
      ],
      "context": {
        "resources": {
          "path": "/bitnami/redis",
          "url": "{SHA_ARCHIVE}"
        },
        "runtime_parameters": "",
        "target_platform": {
          "size": {
            "name": "S4"
          },
          "target_platform_id": "{VIB_ENV_TARGET_PLATFORM}"
        }
      }
    }
  }
}
