{
  "phases": {
    "package": {
      "actions": [
        {
          "action_id": "helm-package"
        },
        {
          "action_id": "helm-lint"
        }
      ],
      "context": {
        "resources": {
          "path": "/bitnami/ghost",
          "url": "{SHA_ARCHIVE}"
        }
      }
    },
    "publish": {
      "actions": [
        {
          "action_id": "helm-publish",
          "params": {
            "repository": {
              "kind": "S3",
              "password": "{VIB_ENV_S3_PASSWORD}",
              "url": "{VIB_ENV_S3_URL}",
              "username": "{VIB_ENV_S3_USERNAME}"
            }
          }
        }
      ]
    },
    "verify": {
      "actions": [
        {
          "action_id": "trivy",
          "params": {
            "threshold": "CRITICAL",
            "vuln_type": [
              "OS"
            ]
          }
        },
        {
          "action_id": "health-check",
          "params": {
            "app_protocol": "HTTP",
            "endpoint": "lb-ghost-http"
          }
        },
        {
          "action_id": "goss",
          "params": {
            "remote": {
              "workload": "deploy-ghost"
            },
            "resources": {
              "path": "/.vib/ghost/goss"
            }
          }
        },
        {
          "action_id": "cypress",
          "params": {
            "app_protocol": "HTTP",
            "endpoint": "lb-ghost-http",
            "env": {
              "email": "user@example.com",
              "password": "Complicated123!4"
            },
            "resources": {
              "path": "/.vib/ghost/cypress"
            }
          }
        }
      ],
      "context": {
        "resources": {
          "path": "/bitnami/ghost",
          "url": "{SHA_ARCHIVE}"
        },
        "runtime_parameters": "Z2hvc3RVc2VybmFtZTogdXNlcgpnaG9zdFBhc3N3b3JkOiBDb21wbGljYXRlZDEyMyE0Cmdob3N0RW1haWw6IHVzZXJAZXhhbXBsZS5jb20KZ2hvc3RIb3N0OiBiaXRuYW1pLWdob3N0Lm15CnNlcnZpY2U6CiAgdHlwZTogTG9hZEJhbGFuY2VyCiAgcG9ydHM6CiAgICBodHRwOiA4MAo=",
        "target_platform": {
          "size": {
            "name": "S4"
          },
          "target_platform_id": "{VIB_ENV_TARGET_PLATFORM}"
        }
      }
    }
  }
}
