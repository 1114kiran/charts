{
  "phases": {
    "package": {
      "actions": [
        {
          "action_id": "helm-package"
        },
        {
          "action_id": "helm-lint"
        }
      ],
      "context": {
        "resources": {
          "path": "/bitnami/postgresql",
          "url": "{SHA_ARCHIVE}"
        }
      }
    },
    "verify": {
      "actions": [
        {
          "action_id": "trivy",
          "params": {
            "threshold": "CRITICAL",
            "vuln_type": [
              "OS"
            ]
          }
        },
        {
          "action_id": "health-check",
          "params": {
            "endpoint": "lb-postgresql-tcp-postgresql"
          }
        },
        {
          "action_id": "goss",
          "params": {
            "resources": {
              "path": "/.vib/postgresql/goss"
            },
            "remote": {
              "workload": "sts-postgresql"
            }
          }
        }
      ],
      "context": {
        "resources": {
          "path": "/bitnami/postgresql",
          "url": "{SHA_ARCHIVE}"
        },
        "runtime_parameters": "ImF1dGgiOgogICJwb3N0Z3Jlc1Bhc3N3b3JkIjogIjdkTXhMZmNxeE4iCiJwcmltYXJ5IjoKICAic2VydmljZSI6CiAgICAicG9ydHMiOgogICAgICAicG9zdGdyZXNxbCI6IDgwCiAgICAidHlwZSI6ICJMb2FkQmFsYW5jZXIi",
        "target_platform": {
          "size": {
            "name": "S4"
          },
          "target_platform_id": "{VIB_ENV_TARGET_PLATFORM}"
        }
      }
    }
  }
}
