{
  "phases": {
    "package": {
      "actions": [
        {
          "action_id": "helm-package"
        },
        {
          "action_id": "helm-lint"
        }
      ],
      "context": {
        "resources": {
          "path": "/bitnami/kiam",
          "url": "{SHA_ARCHIVE}"
        }
      }
    },
    "publish": {
      "actions": [
        {
          "action_id": "helm-publish",
          "params": {
            "repository": {
              "kind": "S3",
              "password": "{VIB_ENV_S3_PASSWORD}",
              "url": "{VIB_ENV_S3_URL}",
              "username": "{VIB_ENV_S3_USERNAME}"
            }
          }
        }
      ]
    },
    "verify": {
      "actions": [
        {
          "action_id": "trivy",
          "params": {
            "threshold": "CRITICAL",
            "vuln_type": [
              "OS"
            ]
          }
        }
      ]
    }
  }
}
